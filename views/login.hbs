<!-- Sign In Start -->
<div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
   <div class="col-md-6">            
      <form method="POST" action="/login">
         <div class="bg-secondary rounded p-3 my-3 mx-3">
            {{#if error}}
                <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <div class="d-flex align-items-center justify-content-between mb-3">
               <a href="/" class="">
                  <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Report Grading<br/> System v1.0</h3>
               </a>
               <h3>Log In</h3>
            </div>
            <div class="form-floating mb-2">
               <input type="email" class="form-control" id="username" name="username" placeholder="name@example.com" required>
               <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating mb-2">
               <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
               <label for="floatingPassword">Password</label>
            </div>
            <div class="form-floating mb-2">
               <button type="submit" class="btn btn-primary w-100">Sign In</button>
            </div>                  
         </div>
      </form>             
   </div>
</div>
<!-- Sign In End -->